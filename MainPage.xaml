<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui2023.MainPage">

    <ScrollView>
        <HorizontalStackLayout Padding="10"  Spacing="10" HorizontalOptions="Center" VerticalOptions="Center">
         
            <Frame WidthRequest="250" HeightRequest="250" BorderColor="White">
                <Image Source="dhnc.jpeg" />

            </Frame>
              <VerticalStackLayout Spacing="10" Padding="10" WidthRequest="200" HeightRequest="250">
                  <Label Text="DHNC IP" FontSize="Subtitle"

                         ></Label>
                  <Entry></Entry>
                        <Button
                            x:Name="connect"
                            Text="Connect"
                            TextTransform="Uppercase"
                            BackgroundColor="Purple"
                            Clicked="ledbtnclicked"

                        ></Button>
                    </VerticalStackLayout>
          

                  

        </HorizontalStackLayout>









    </ScrollView>

</ContentPage>